@model List<Tag>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">

    <div class="card">

        <div class="card-body">

            <h4 class="card-title">Tags</h4>
            <div class=" "><a asp-controller="Tag" asp-action="create" class="btn btn-success">Create Tag</a></div>
            <div class="table-responsive">

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Product Count
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Tag item in Model)
                        {
                            count++;
                            <tr>

                                <td>
                                    @count
                                </td>

                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.ProductTags.Count
                                </td>

                                <td>
                                    <a asp-action="update" asp-controller="Tag" asp-route-id="@item.Id" class="text-warning btn btn-dark"><i class="mdi mdi-pencil-box"></i></a>

                                    <a asp-action="delete" asp-controller="Tag" asp-route-id="@item.Id" class="text-danger btn btn-dark"><i class="mdi mdi-delete"></i></a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>