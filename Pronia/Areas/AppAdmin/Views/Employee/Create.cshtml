@model CreateEmployeeVM
<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Create Employee</h4>
                            <form class="forms-sample" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label asp-for="Photo">Photo</label>
                                    <input asp-for="Photo" class="form-control" accept="image/*">
                                    <span class="text-danger" asp-validation-for="Photo"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Name">Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="Name">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Surname">Surname</label>
                                    <input asp-for="Surname" class="form-control" placeholder="Surname">
                                    <span class="text-danger" asp-validation-for="Surname"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PositionId">Positon</label>
                                    <select asp-for="PositionId" class="form-control" asp-items="new SelectList(ViewBag.Positions,nameof(Position.Id),nameof(Position.Name))">
                                        <option disabled selected>
                                            Select Position please...
                                        </option>
                                    </select>
                                    <span class="text-danger" asp-validation-for="PositionId"></span>
                                </div>
                                <button type="submit" class="btn btn-primary me-2">Create</button>
                                <a asp-action="index" asp-controller="employee" class="btn btn-light">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>