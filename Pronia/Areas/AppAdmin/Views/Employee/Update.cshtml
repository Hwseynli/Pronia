@model UpdateEmployeeVM
<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Update Employee</h4>
                            <form class="forms-sample" method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-2">
                                        <img src="~/assets/images/website-images/users/@Model.ImageUrl" />
                                    </div>
                                    <div class="col-10 form-group">
                                        <label asp-for="Photo">Choose new Photo</label>
                                        <input asp-for="Photo" class="form-control" accept="image/*">
                                        <span class="text-danger" asp-validation-for="Photo"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Name">Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="Name" value="@Model.Name">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Surname">Surname</label>
                                    <input asp-for="Surname" class="form-control" placeholder="Surname" value="@Model.Surname">
                                    <span class="text-danger" asp-validation-for="Surname"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PositionId">Positon</label>
                                    <select asp-for="PositionId" class="form-control" asp-items="new SelectList(ViewBag.Positions,nameof(Position.Id),nameof(Position.Name))">
                                    </select>
                                    <span class="text-danger" asp-validation-for="PositionId"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description">Description</label>
                                    <input asp-for="Description" class="form-control" placeholder="Description" value="@Model.Description">
                                    <span class="text-danger" asp-validation-for="Description"></span>
                                </div>
                                <button type="submit" class="btn btn-primary me-2">Update</button>
                                <a asp-action="index" asp-controller="employee" class="btn btn-light">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>