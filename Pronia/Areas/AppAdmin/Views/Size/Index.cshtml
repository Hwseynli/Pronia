@model List<Size>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">

    <div class="card">

        <div class="card-body">

            <h4 class="card-title">Sizes</h4>
            <div class=" "><a asp-controller="Size" asp-action="create" class="btn btn-success">Create Size</a></div>
            <div class="table-responsive">

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Product Count
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Size item in Model)
                        {
                            count++;
                            <tr>

                                <td>
                                    @count
                                </td>

                                <td>
                                    @item.Measure
                                </td>
                                <td>
                                    @item.Products.Count
                                </td>

                                <td>
                                    <a asp-action="update" asp-controller="Size" asp-route-id="@item.Id" class="text-warning btn btn-dark"><i class="mdi mdi-pencil-box"></i></a>

                                    <a asp-action="delete" asp-controller="Size" asp-route-id="@item.Id" class="text-danger btn btn-dark"><i class="mdi mdi-delete"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>