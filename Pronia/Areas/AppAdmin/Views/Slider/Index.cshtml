@model List<Slider>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Slides</h4>
            <div class=" "><a asp-controller="slider" asp-action="create" class="btn btn-success">Create Slide</a></div>
            <div class="table-responsive">

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Order
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Slider slide in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    <img style="width:150px;height:150px;" src="~/assets/images/website-images/@slide.ImgUrl" />
                                </td>
                                <td>
                                    @slide.Title
                                </td>
                                <td>
                                    @slide.Order
                                </td>
                                <td>
                                    <a asp-action="update" asp-controller="slider" asp-route-id="@slide.Id" class="btn btn-warning "><i class="mdi mdi-pencil-box"></i></a>
                                    <a asp-action="delete" asp-controller="slider" asp-route-id="@slide.Id" class="btn btn-danger "><i class="mdi mdi-delete"></i></a>
                                    <a asp-action="details" asp-controller="slider" asp-route-id="@slide.Id" class="btn btn-primary "><i class="mdi mdi-open-in-new"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>